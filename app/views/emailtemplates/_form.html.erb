<%= form_for @emailtemplate do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">
        <%= f.label :key %>
    </label>
    
    <%= f.text_field :key , class:'form-control',placeholder:'key' %>
    
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">
        <%= f.label :subject %>
    </label>
    
    <%= f.text_field :subject , class:'form-control',placeholder:'subject' %>
  
  </div>
  
    <div class="form-group">
    <label for="exampleInputEmail1">
        <%= f.label :body %>
    </label>
    
    <%= f.text_area :body , class:'form-control',placeholder:'body' %>
  
  </div>
  
     <%= f.submit 'Submit' , class: 'btn btn-default'%>
<% end %>
